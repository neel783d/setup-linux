# Git Alias
alias gdf='git diff'
alias gss='git status'
alias gckt='git checkout'
alias gpo='git push origin'
alias gpl='git pull'
alias gbh='git branch'
alias gcmt='git commit -am'
alias gcn='git clone'
alias grs='git reset --soft'
alias grh='git reset --hard'
alias gdel='git branch --delete'
alias gdelcurr='git checkout master && git pull && git branch --delete $(git branch | head -1 | cut -c 3-)'

# TV Alias
alias mmon="sh ~/.vim/toggle-screen.sh monitor"
alias mtv="sh ~/.vim/toggle-screen.sh tv"
alias mclone="sh ~/.vim/toggle-screen.sh clone"
alias mexp="sh ~/.vim/toggle-screen.sh expand"
